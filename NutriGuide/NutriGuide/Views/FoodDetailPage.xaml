                        >
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="DeleteTapp_Tapped"
                                                  CommandParameter="{Binding Id}"/>
                        </Image.GestureRecognizers>
                    </Image>
                </StackLayout>-->
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
